<%= render 'layouts/shared/navbar' %>

<h1> <%= @cocktail.name %> </h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li> <%= dose.description %> - <%= dose.ingredient.name %> - 
    <%= link_to "Supprimer cet ingrédient", 
    dose_path(dose),
    method: :delete,
    data: { confirm: "Are you sure?" },
     class:'btn btn-warning' %> 
   </li>
  <% end %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</ul>

<%= link_to "Ajoute un ingrédient et son dosage", new_cocktail_dose_path(@cocktail), class:'btn btn-success' %>

<%= link_to "retour à la liste", cocktails_path, class:'btn btn-primary' %>